{
    "name": "vscode-apprt-bundles",
    "displayName": "vscode-apprt-bundles",
    "description": "VS Code extension that supports working with a bundle manifest.json",
    "version": "0.0.5",
    "author": {
        "name": "ctjdr"
    },
    "publisher": "ctjdr",
    "repository": {
        "type": "git",
        "url": "https://github.com/ctjdr/vscode-apprt-bundles.git",
        "directory": ""
    },
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/boxes-v2.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "manifest.json",
                "url": "./out/schemas/manifest.schema.json"
            }
        ],
        "configuration": {
            "title": "apprt-bundles",
            "properties": {
                "apprtbundles.manifest.serviceNameCodeLens.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable code lens for service names in manifest.json files, by default."
                }
            }
        },
        "commands": [
            {
                "command": "apprtbundles.manifest.toggleServiceNameCodeLens",
                "title": "apprt-bundles: Toggle service name code lens"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "npm run copy-json && tsc -watch -p ./",
        "watch-json": "copy-and-watch --watch src/schemas/**/*.json out/schemas/",
        "copy-json": "copyfiles -u 1 src/schemas/* src/test/suite/files/* out/",
        "pretest": "npm run copy-json && npm run compile && npm run lint",
        "test": "node ./out/test/runTest",
        "testIt": "node ./out/test/runIntegrationTest",
        "testIt2": "mocha out/test/suite/index.js",
        "test-manifest-path": "npm run compile && mocha out/test/suite/manifestPathTest.js",
        "get-version": "echo $npm_package_version"
    },
    "dependencies": {
        "jsonc-parser": "^2.3.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "ajv": "^6.12.4",
        "chai": "^4.2.0",
        "copy-and-watch": "^0.1.5",
        "copyfiles": "^2.3.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    }
}
